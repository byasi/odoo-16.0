<odoo>
    <record id="view_cashbook_report_wizard_form" model="ir.ui.view">
        <field name="name">sales.move.cashbook.report.wizard.form</field>
        <field name="model">sales.move.cashbook.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Cash Book">
                <sheet>
                    <group>
                        <group string="Target Moves" col="4">
                            <field name="target_move" widget="radio"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Filters" name="filters">
                            <group>
                                <group>
                                    <field name="account_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="journal_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                </group>
                            </group>
                            <group>
                                <group col="3">
                                    <field name="date_from" datepicker="{'position': 'bottom'}"/>
                                </group>
                                <group col="3">
                                    <field name="date_to" datepicker="{'position': 'bottom'}"/>
                                </group>
                                <group col="3">
                                    <field name="currency_id" options="{'no_create': True}"/>
                                </group>
                                <group col="3">
                                    <field name="initial_balance"/>
                                    <field name="sort_selection" widget="radio" options="{'horizontal': true}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>

                    <group string="Summary" col="4">
                        <field name="opening_balance" readonly="1"/>
                    </group>

                    <field name="line_ids" nolabel="1" colspan="4">
                        <tree editable="bottom" default_order="date, id" string="Transactions">
                            <field name="date" readonly="1"/>
                            <field name="journal_id" optional="hide" readonly="1"/>
                            <field name="reference" readonly="1"/>
                            <field name="description" readonly="1"/>
                            <field name="amount" widget="monetary" readonly="1"/>
                            <field name="balance" widget="monetary" readonly="1"/>
                        </tree>
                    </field>
                </sheet>

                <footer>
                    <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button name="action_print_pdf" string="Print" type="object" class="oe_link" attrs="{'invisible': [('line_ids', '=', [])]}"/>
                    <button name="action_export_excel" string="Export to Excel" type="object" class="oe_link" attrs="{'invisible': [('line_ids', '=', [])]}"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cashbook_report_wizard" model="ir.actions.act_window">
        <field name="name">Cash Book</field>
        <field name="res_model">sales.move.cashbook.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

