<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Stock Report Tree View -->
    <record id="view_customer_stock_report_tree" model="ir.ui.view">
        <field name="name">customer.stock.report.tree</field>
        <field name="model">customer.stock.report</field>
        <field name="arch" type="xml">
            <tree string="Customer Stock Movements">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="move_type"/>
                <field name="opening_stock"/>
                <field name="debit_qty"/>
                <field name="credit_qty"/>
                <field name="balance_qty"/>
                <field name="move_id"/>
            </tree>
        </field>
    </record>

    <!-- Customer Stock Report Form View -->
    <record id="view_customer_stock_report_form" model="ir.ui.view">
        <field name="name">customer.stock.report.form</field>
        <field name="model">customer.stock.report</field>
        <field name="arch" type="xml">
            <form string="Customer Stock Movement">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                            <field name="date"/>
                            <field name="move_type"/>
                        </group>
                        <group>
                            <field name="opening_stock"/>
                            <field name="debit_qty"/>
                            <field name="credit_qty"/>
                            <field name="balance_qty"/>
                            <field name="move_id"/>
                            <field name="stock_move_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Customer Stock Report Search View -->
    <record id="view_customer_stock_report_search" model="ir.ui.view">
        <field name="name">customer.stock.report.search</field>
        <field name="model">customer.stock.report</field>
        <field name="arch" type="xml">
            <search string="Search Customer Stock Movements">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="move_type"/>
                <field name="date"/>
                <filter string="Sales" name="sales" domain="[('move_type','=','sale')]"/>
                <filter string="Purchases" name="purchases" domain="[('move_type','=','purchase')]"/>
                <filter string="Returns" name="returns" domain="[('move_type','=','return')]"/>
                <filter string="Opening Balance" name="opening" domain="[('move_type','=','opening')]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Movement Type" name="group_type" context="{'group_by':'move_type'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Opening Stock Wizard Form View -->
    <record id="view_set_opening_stock_wizard_form" model="ir.ui.view">
        <field name="name">set.opening.stock.wizard.form</field>
        <field name="model">set.opening.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Set Opening Stock">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="date"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="opening_stock"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_set_opening_stock" string="Set Opening Stock" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_customer_stock_report" model="ir.actions.act_window">
        <field name="name">Customer Stock Movements</field>
        <field name="res_model">customer.stock.report</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_customer_stock_report_search"/>
    </record>

    <record id="action_set_opening_stock" model="ir.actions.act_window">
        <field name="name">Set Opening Stock</field>
        <field name="res_model">set.opening.stock.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_customer_stock_report"
        name="Customer Stock Movements"
        action="action_customer_stock_report"
        parent="stock.menu_warehouse_report"
        sequence="20"/>

    <menuitem id="menu_set_opening_stock"
        name="Set Opening Stock"
        action="action_set_opening_stock"
        parent="stock.menu_warehouse_config"
        sequence="100"/>
</odoo> 