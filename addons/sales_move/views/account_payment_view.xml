<odoo>
    <data>
        <record id="account_edi.view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_left_group']" position="inside">
                </xpath>

                <xpath expr="//group[@id='header_right_group']" position="inside">
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="replace">
                    <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2"
                        attrs="{'invisible': [('move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt'))]}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_unit']" position="after">
                    <field name="price_currency" />
                </xpath>


                    <xpath expr="//field[@name='tax_totals']" position="after">
                <table class="oe_subtotal_footer oe_right" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}">
                    <tbody>
                         <tr attrs="{'invisible': [('amount_tax', '=', 0.0)]}">
                            <td class="o_td_label" style="padding-right: 500px;">
                                <span class="o_form_label o_tax_total_label">Tax</span>
                            </td>
                            <td class="o_list_monetary">
                                <field name="amount_tax" string="Tax" readonly="1" style="font-size: 25px;"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="o_td_label" style="padding-right: 50px;">
                                <span class="o_form_label o_tax_total_label">Total</span>
                            </td>
                            <td class="o_list_monetary">
                                <field name="amount_total" string="Total" readonly="1"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </xpath>

            </field>
        </record>
    </data>
</odoo>